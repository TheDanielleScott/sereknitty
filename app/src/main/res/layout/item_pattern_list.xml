<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <ImageView
    android:id="@+id/pattern_picture"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:scaleType="centerInside"
    android:padding="@dimen/half_dynamic_spacing"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>
<!--  TODO: Ask Nick about recommendations for image size here.-->

  <TextView
    android:id="@+id/pattern_name"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="@id/pattern_picture"


</androidx.constraintlayout.widget.ConstraintLayout>